<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#88555555"
                android:endColor="#88AAAAAA"
                android:angle="270" />
            <stroke
                android:width="1sp"
                android:color="#DD555555" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#88CCCCCC"
                android:startColor="#55FFFFFF"
                android:angle="270" />
            <stroke
                android:width="1sp"
                android:color="#DD555555" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>