<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#88111111"
                android:endColor="#88777777"
                android:angle="270" />
            <stroke
                android:width="1sp"
                android:color="#DD555555" />
            <corners
                android:radius="190dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#88888888"
                android:startColor="#55BBBBBB"
                android:angle="270" />
            <stroke
                android:width="1sp"
                android:color="#DD555555" />
            <corners
                android:radius="190dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>