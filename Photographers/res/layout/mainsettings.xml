<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
        android:id="@+id/maini"
        android:orientation="vertical"
        android:padding="5dp"
	    android:layout_height="fill_parent" 
	    android:layout_width="fill_parent">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/tablor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:scrollbars="vertical" >

                <TableLayout
                    android:id="@+id/table"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="8dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp" >

                    <LinearLayout
                        android:id="@+id/maini"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/freecell"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/general"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/restart_required" />

                        <TextView
                            android:id="@+id/freecell"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="GeoTag :"
                            android:visibility="invisible" />

                        <LinearLayout
                            android:id="@+id/maini"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:paddingLeft="5dp" >

                            <TextView
                                android:id="@+id/freecell"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/geotag" />

                            <LinearLayout
                                android:id="@+id/maini"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/freecell"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".7"
                                    android:text="GeoTag :"
                                    android:visibility="invisible" />

                                <ToggleButton
                                    android:id="@+id/geotag"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".3"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:text="Allgemein :"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/maini"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:paddingLeft="5dp" >

                            <TextView
                                android:id="@+id/freecell"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/timestamp" />

                            <LinearLayout
                                android:id="@+id/maini"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/freecell"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".7"
                                    android:text="GeoTag :"
                                    android:visibility="invisible" />

                                <Spinner
                                    android:id="@+id/zeitstempel"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".3"
                                    android:gravity="right"
                                    android:text="Allgemein :" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/maini"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:paddingLeft="5dp" >

                            <TextView
                                android:id="@+id/freecell"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/correction_type" />

                            <LinearLayout
                                android:id="@+id/maini"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/freecell"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".7"
                                    android:text="GeoTag :"
                                    android:visibility="invisible" />

                                <Spinner
                                    android:id="@+id/verlang"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".3"
                                    android:gravity="right"
                                    android:text="Allgemein :" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/maini"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:paddingLeft="5dp" >

                            <TextView
                                android:id="@+id/freecell"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/aperture_type" />

                            <LinearLayout
                                android:id="@+id/maini"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/freecell"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".7"
                                    android:text="GeoTag :"
                                    android:visibility="invisible" />

                                <Spinner
                                    android:id="@+id/blenden"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".3"
                                    android:gravity="right"
                                    android:text="Allgemein :" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/LinearLayout01"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:paddingLeft="5dp" >

                            <TextView
                                android:id="@+id/TextView01"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/reset_tutorial" />

                            <LinearLayout
                                android:id="@+id/LinearLayout01"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/TextView01"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".7"
                                    android:text="GeoTag :"
                                    android:visibility="invisible" />

                                <Button
                                    android:id="@+id/ButtonTutorialBack"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".3"
                                    android:gravity="center"
                                    android:text="@string/reset_tutorial"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/maini"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            android:paddingLeft="5dp" >

                            <LinearLayout
                                android:id="@+id/maini"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="right"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/freecell"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".7"
                                    android:text="GeoTag :"
                                    android:visibility="invisible" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </TableLayout>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>