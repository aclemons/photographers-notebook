<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/RelativeLayout01" 
        android:orientation="vertical"
	    android:layout_width="fill_parent" 
	    android:layout_centerInParent="true"
	    android:padding="20dp"
	    android:fitsSystemWindows="true"
	    android:gravity="center_vertical|center_horizontal"
	    android:layout_height="fill_parent"
	    xmlns:android="http://schemas.android.com/apk/res/android">
	    <LinearLayout android:id="@+id/RelativeLayout01" 
	        android:orientation="vertical"
		    android:layout_width="wrap_content" 
		    android:layout_centerInParent="true"
		    android:gravity="center_vertical|center_horizontal"
		    android:layout_height="fill_parent"
		    xmlns:android="http://schemas.android.com/apk/res/android">
		    <Button android:id="@+id/newFilm" 
		        android:visibility="gone"
		        android:layout_width="fill_parent" 
		        android:text="Neuen Film starten"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true">
		    </Button>
		    <Button android:id="@+id/oldFilm"
		        android:visibility="gone" 
		        android:layout_width="fill_parent" 
		        android:text="Alten Film fortsetzen"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true">
		    </Button>
		    <Button android:id="@+id/showFilm" 
		        android:visibility="gone"
		        android:layout_width="fill_parent" 
		        android:text="Alle Filme betrachten"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true">
		    </Button>
		    <ImageButton android:id="@+id/newFilmImage" 
		        android:layout_gravity="center"
		        android:layout_width="wrap_content" 
		        android:scaleType="fitCenter"
		        android:layout_weight=".5"
		        android:layout_alignParentTop="true"
        		android:layout_alignParentRight="true"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true">
		    </ImageButton>
		    <ImageButton android:id="@+id/oldFilmImage" 
		        android:layout_width="wrap_content" 
		        android:layout_gravity="center"
		        android:layout_alignParentTop="true"
		        android:layout_weight=".5"
        		android:layout_alignParentRight="true"
		        android:scaleType="fitCenter"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true">
		    </ImageButton>
	 	</LinearLayout>   
</LinearLayout>

