<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/unisiegen.photographers.activity"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:id="@+id/testen"
    android:layout_height="fill_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <Button
        android:id="@+id/button_aufnehmen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
            android:text="@string/take_picture"
        android:textSize="14sp" />

        <LinearLayout
             android:id="@+id/texttitle"
            android:paddingRight="1dp"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">

<Button
android:id="@+id/button_minus"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_weight=".1"
android:text="     -     "
android:textSize="14sp" />

            <TextView
android:id="@+id/TextView_nr"
android:layout_width="fill_parent"
android:layout_weight=".1"
android:gravity="center"
android:textStyle="bold"
android:layout_height="wrap_content"
android:text="Bild 15" />

            <Button
android:id="@+id/button_plus"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_weight=".1"
android:text="     +     "
android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

    <com.viewpagerindicator.TitlePageIndicator
    android:id="@+id/titles"
    android:padding="5dip"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    app:footerColor="#FFAA2222"
    app:footerLineHeight="1dp"
    app:footerIndicatorHeight="3dp"
    app:footerIndicatorStyle="underline"
    app:textColor="#AA000000"
    app:selectedColor="#FF000000"
    app:textSize="11dp"
    app:selectedBold="true"
    />

    <android.support.v4.view.ViewPager
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:id="@+id/viewPager" />
</LinearLayout>